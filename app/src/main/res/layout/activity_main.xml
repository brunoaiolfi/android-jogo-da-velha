<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/player1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jogador 1:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="X"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/player2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jogador 2:"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bloco1"
                            android:layout_width="228px"
                            android:layout_height="228px"
                            android:background="#fff"
                            android:tag="1" />

                        <Button
                            android:id="@+id/bloco2"
                            android:layout_width="228px"
                            android:layout_height="228px"
                            android:layout_marginHorizontal="8px"
                            android:background="#fff"
                            android:tag="2" />

                        <Button
                            android:id="@+id/bloco3"
                            android:layout_width="228px"
                            android:layout_height="228px"
                            android:background="#fff"
                            android:tag="3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8px"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bloco4"
                            android:layout_width="228px"
                            android:layout_height="228px"
                            android:background="#fff"
                            android:tag="4" />

                        <Button
                            android:id="@+id/bloco5"
                            android:layout_width="228px"
                            android:layout_height="228px"
                            android:layout_marginHorizontal="8px"
                            android:background="#fff"
                            android:tag="5" />

                        <Button
                            android:id="@+id/bloco6"
                            android:layout_width="228px"
                            android:layout_height="228px"
                            android:background="#fff"
                            android:tag="6" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bloco7"
                            android:layout_width="228px"
                            android:layout_height="228px"
                            android:background="#fff"
                            android:tag="7" />

                        <Button
                            android:id="@+id/bloco8"
                            android:layout_width="228px"
                            android:layout_height="228px"
                            android:layout_marginHorizontal="8px"
                            android:background="#fff"
                            android:tag="8" />

                        <Button
                            android:id="@+id/bloco9"
                            android:layout_width="228px"
                            android:layout_height="228px"
                            android:background="#fff"
                            android:tag="9" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnFinalizar"
                    android:layout_width="264dp"
                    android:layout_height="50dp"
                    android:text="Finalizar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HistÃ³rico de partidas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:stretchColumns="*"
                android:id="@+id/tablePartidas">

                <TableRow>

                    <TextView
                        android:text="Partida"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:text="Vencedor"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>